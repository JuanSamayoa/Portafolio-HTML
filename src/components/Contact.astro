            <!-- WhatsApp (nuevo) -->
            <div class="group flex items-start gap-4 p-4 rounded-xl hover:bg-primary/5 transition-all duration-300 cursor-pointer" onclick="window.open('https://wa.me/50255555555', '_blank')">
