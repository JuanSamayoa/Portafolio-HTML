---
interface Props {
  id: string;
  title?: string;
  subtitle?: string;
  class?: string;
  containerClass?: string;
  titleClass?: string;
  subtitleClass?: string;
  contentClass?: string;
}

const {
  id,
  title,
  subtitle,
  class: className = "",
  containerClass = "",
  titleClass = "",
  subtitleClass = "",
  contentClass = ""
} = Astro.props;
---

<section 
  id={id} 
  class={`section-container py-12 md:py-16 lg:py-20 ${className}`}
>
  <div class={`container mx-auto px-4 sm:px-6 lg:px-8 ${containerClass}`}>
    {title && (
      <h2 class={`text-2xl md:text-3xl font-bold mb-2 text-gray-800 dark:text-white ${titleClass}`}>
        {title}
      </h2>
    )}
    
    {subtitle && (
      <p class={`text-gray-600 dark:text-gray-400 mb-6 md:mb-8 ${subtitleClass}`}>
        {subtitle}
      </p>
    )}
    
    <div class={`content ${contentClass}`}>
      <slot />
    </div>
  </div>
</section>

<style>
  .section-container {
    scroll-margin-top: 5rem; /* Asegura espacio adecuado al hacer scroll */
    scroll-behavior: smooth; /* Refuerza comportamiento suave */
    transition: all 0.5s ease-in-out;
    position: relative; /* Para efectos de resaltado */
  }
  
  /* Eliminado el efecto de resaltado que aparecía cuando se navega a una sección */
  /* .section-container:target::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--color-primary-rgb, 59, 130, 246);
    opacity: 0.05;
    animation: highlightFade 1.5s ease-out forwards;
    border-radius: 0.5rem;
    pointer-events: none;
    z-index: -1;
  } */
  
  /* @keyframes highlightFade {
    0% { opacity: 0.15; }
    100% { opacity: 0; }
  } */
  
  .container {
    width: 100%;
    max-width: 100%;
  }
  
  /* Tamaños responsivos para el container */
  @media (min-width: 640px) {
    .container {
      max-width: 640px;
    }
  }
  
  @media (min-width: 768px) {
    .container {
      max-width: 720px;
    }
  }
  
  @media (min-width: 1024px) {
    .container {
      max-width: 980px;
    }
  }
  
  @media (min-width: 1280px) {
    .container {
      max-width: 1200px;
    }
  }
</style>
