---
/**
 * CONTACT SECTION - Formulario de contacto moderno
 * Con validación y links sociales
 */

import Section from "../../shared/ui/Section.astro";
import Card from "../../shared/ui/Card.astro";
import Button from "../../shared/ui/Button.astro";
import { personalInfo } from "../../data/personal";

const contactMethods = [
  {
    icon: "email",
    label: "Email",
    value: personalInfo.email,
    href: `mailto:${personalInfo.email}`,
  },
  {
    icon: "github",
    label: "GitHub",
    value: "@JuanSamayoa",
    href: personalInfo.github,
  },
  {
    icon: "linkedin",
    label: "LinkedIn",
    value: "Juan Samayoa",
    href: personalInfo.linkedin,
  },
];
---

<Section id="contact" background="primary" class="relative">
  <!-- Background decorativo mejorado -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Gradiente superior -->
    <div
      class="absolute top-0 left-0 right-0 h-96 bg-gradient-to-b from-brand-500/10 via-transparent to-transparent"
    >
    </div>

    <!-- Círculos decorativos -->
    <div
      class="absolute top-20 right-10 w-72 h-72 bg-brand-500/20 rounded-full blur-3xl animate-pulse"
      style="animation-duration: 4s;"
    >
    </div>
    <div
      class="absolute bottom-20 left-10 w-96 h-96 bg-success-500/15 rounded-full blur-3xl animate-pulse"
      style="animation-duration: 6s; animation-delay: 1s;"
    >
    </div>

    <!-- Grid pattern sutil -->
    <div
      class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:50px_50px]"
    >
    </div>
  </div>

  <div class="space-y-12 relative z-10">
    <!-- Header -->
    <div class="text-center space-y-4">
      <h2
        class="text-3xl sm:text-4xl lg:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-brand-400 to-success-400"
      >
        Trabajemos Juntos
      </h2>
      <p class="text-lg text-foreground-secondary max-w-3xl mx-auto">
        Siempre estoy interesado en nuevos proyectos y oportunidades de
        colaboración
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
      <!-- Columna izquierda - Info de contacto -->
      <div class="space-y-6">
        <Card
          variant="glass"
          padding="lg"
          class="backdrop-blur-xl bg-background-elevated/80 border border-white/10"
        >
          <div class="space-y-6">
            <div>
              <h3 class="text-2xl font-bold text-foreground-primary mb-4">
                Información de Contacto
              </h3>
              <p class="text-foreground-secondary">
                No dudes en contactarme a través de cualquiera de estos medios.
                Respondo rápidamente a todos los mensajes.
              </p>
            </div>

            <!-- Contact methods -->
            <div class="space-y-4">
              {
                contactMethods.map((method) => (
                  <a
                    href={method.href}
                    target={method.icon !== "email" ? "_blank" : undefined}
                    rel={
                      method.icon !== "email"
                        ? "noopener noreferrer"
                        : undefined
                    }
                    class="flex items-center gap-4 p-4 bg-glass-light hover:bg-glass-medium rounded-lg transition-all duration-300 group"
                  >
                    <div class="p-3 bg-brand-500/20 rounded-lg group-hover:bg-brand-500 transition-colors">
                      {method.icon === "email" && (
                        <svg
                          class="w-6 h-6 text-brand-400 group-hover:text-white transition-colors"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                          />
                        </svg>
                      )}
                      {method.icon === "github" && (
                        <svg
                          class="w-6 h-6 text-brand-400 group-hover:text-white transition-colors"
                          fill="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
                        </svg>
                      )}
                      {method.icon === "linkedin" && (
                        <svg
                          class="w-6 h-6 text-brand-400 group-hover:text-white transition-colors"
                          fill="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                        </svg>
                      )}
                    </div>
                    <div>
                      <div class="font-semibold text-foreground-primary">
                        {method.label}
                      </div>
                      <div class="text-sm text-foreground-tertiary">
                        {method.value}
                      </div>
                    </div>
                  </a>
                ))
              }
            </div>
          </div>
        </Card>

        <!-- CV Download Card -->
        <Card
          variant="bordered"
          padding="md"
          class="backdrop-blur-xl bg-background-elevated/60 border border-brand-500/30"
        >
          <div class="text-center space-y-4">
            <div class="flex justify-center">
              <div class="p-4 bg-brand-500/20 rounded-full">
                <svg
                  class="w-8 h-8 text-brand-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  ></path>
                </svg>
              </div>
            </div>
            <div>
              <h4 class="font-bold text-foreground-primary mb-2">
                Descargar CV
              </h4>
              <p class="text-sm text-foreground-secondary">
                Disponible en español e inglés
              </p>
            </div>
            <div class="flex gap-3">
              <Button
                variant="primary"
                size="sm"
                href={personalInfo.cvPathEs}
                class="flex-1"
              >
                Español
              </Button>
              <Button
                variant="outline"
                size="sm"
                href={personalInfo.cvPathEn}
                class="flex-1"
              >
                English
              </Button>
            </div>
          </div>
        </Card>
      </div>

      <!-- Columna derecha - Formulario -->
      <Card
        variant="glass"
        padding="lg"
        class="backdrop-blur-xl bg-background-elevated/80 border border-white/10"
      >
        <form class="space-y-6" id="contact-form">
          <div>
            <h3 class="text-2xl font-bold text-foreground-primary mb-2">
              Envíame un Mensaje
            </h3>
            <p class="text-foreground-secondary text-sm">
              Completa el formulario y te responderé lo antes posible
            </p>
          </div>

          <!-- Nombre -->
          <div>
            <label
              for="name"
              class="block text-sm font-semibold text-foreground-primary mb-2"
            >
              Nombre *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 bg-background-elevated border border-white/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent text-foreground-primary placeholder-foreground-muted transition-all"
              placeholder="Tu nombre completo"
            />
          </div>

          <!-- Email -->
          <div>
            <label
              for="email"
              class="block text-sm font-semibold text-foreground-primary mb-2"
            >
              Email *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-background-elevated border border-white/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent text-foreground-primary placeholder-foreground-muted transition-all"
              placeholder="tu@email.com"
            />
          </div>

          <!-- Asunto -->
          <div>
            <label
              for="subject"
              class="block text-sm font-semibold text-foreground-primary mb-2"
            >
              Asunto *
            </label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 bg-background-elevated border border-white/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent text-foreground-primary placeholder-foreground-muted transition-all"
              placeholder="¿Sobre qué quieres hablar?"
            />
          </div>

          <!-- Mensaje -->
          <div>
            <label
              for="message"
              class="block text-sm font-semibold text-foreground-primary mb-2"
            >
              Mensaje *
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-3 bg-background-elevated border border-white/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent text-foreground-primary placeholder-foreground-muted transition-all resize-none"
              placeholder="Cuéntame más sobre tu proyecto o consulta..."
            ></textarea>
          </div>

          <!-- Submit button -->
          <Button type="submit" variant="primary" size="lg" class="w-full">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
            Enviar Mensaje
          </Button>

          <p class="text-xs text-foreground-muted text-center">
            * Campos requeridos
          </p>
        </form>
      </Card>
    </div>
  </div>
</Section>

<script>
  // Handle form submission
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("contact-form") as HTMLFormElement;

    if (form) {
      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        // Aquí puedes integrar con un servicio de email como FormSubmit, EmailJS, etc.
        console.log("Form submitted:", data);

        // Feedback visual
        alert("¡Gracias por tu mensaje! Te contactaré pronto.");
        form.reset();
      });
    }
  });
</script>
