---
import UserIcon from "./icons/UserIcon.astro";
import Heading from "./atoms/Heading.astro";
import Text from "./atoms/Text.astro";
import Card from "./atoms/Card.astro";
import Button from "./atoms/Button.astro";
import { personalInfo } from "../data/portfolio.js";
---

<div class="w-full reveal-section relative">
  <!-- Elementos decorativos de fondo (no interactivos) -->
  <div
    class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-primary/5 to-transparent rounded-full blur-3xl pointer-events-none -z-10 opacity-30"
    aria-hidden="true"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 w-40 h-40 bg-gradient-to-tr from-accent/5 to-transparent rounded-full blur-3xl pointer-events-none -z-10 opacity-30"
    aria-hidden="true"
  >
  </div>

  <Heading level={2} class="mb-2 flex items-center gap-2 reveal-item">
    <UserIcon class="inline-block w-7 h-7 md:w-8 md:h-8" />
    Sobre Mí
  </Heading>
  <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
    <!-- Foto e info personal -->
    <div
      class="lg:col-span-4 flex flex-col items-center lg:items-start reveal-item"
    >
      <Card
        class="p-0 overflow-hidden mb-6 group hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1"
      >
        <div class="relative w-64 h-80 rounded-lg overflow-hidden mx-auto">
          <img
            src="/assets/img/about.webp"
            alt={`Foto de ${personalInfo.name}`}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            onerror={`this.src='${personalInfo.profileImageFallback}';`}
          />
          <!-- Overlay con gradiente en hover -->
          <div
            class="absolute inset-0 bg-gradient-to-t from-primary/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
          >
          </div>
          <!-- Efecto de borde animado -->
          <div
            class="absolute inset-0 border-2 border-primary/0 group-hover:border-primary/50 rounded-lg transition-all duration-500"
          >
          </div>
        </div>
      </Card>

      <Card
        class="w-full max-w-sm p-6 bg-gradient-to-br from-white/80 to-white/60 dark:from-gray-800/80 dark:to-gray-900/60 backdrop-blur-sm border border-gray-200/50 dark:border-gray-700/50 hover:shadow-xl transition-all duration-500"
      >
        <div class="space-y-1">
          <h4
            class="text-lg font-semibold text-primary dark:text-primary-300 mb-4 flex items-center gap-2"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              ></path>
            </svg>
