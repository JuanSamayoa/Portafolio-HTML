---
// √çcono de documento reutilizable para CV, con soporte para dark y light mode
const { class: className = "" } = Astro.props;
---
<svg class={className} xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 32 32" aria-label="CV" fill="none">
  <rect x="4" y="2" width="20" height="28" rx="3"
    fill="var(--cv-bg, #f3f4f6)" stroke="var(--cv-border, #111827)" stroke-width="1.5"/>
  <rect x="7" y="7" width="14" height="2" rx="1" fill="var(--cv-line, #d1d5db)"/>
  <rect x="7" y="12" width="14" height="2" rx="1" fill="var(--cv-line, #d1d5db)"/>
  <rect x="7" y="17" width="10" height="2" rx="1" fill="var(--cv-line, #d1d5db)"/>
  <g>
    <rect x="7" y="22" width="8" height="5" rx="1.5" fill="var(--cv-label-bg, #2563eb)"/>
    <text x="11" y="26" text-anchor="middle" alignment-baseline="middle" font-size="2.5" font-family="Arial, Helvetica, sans-serif" fill="var(--cv-label, #fff)" font-weight="bold">CV</text>
  </g>
  <style>
    :host, svg {
      --cv-bg: #f3f4f6;
      --cv-border: #111827;
      --cv-line: #d1d5db;
      --cv-label-bg: #2563eb;
      --cv-label: #fff;
    }
    :global(.dark) svg {
      --cv-bg: #18181b;
      --cv-border: #e5e7eb;
      --cv-line: #27272a;
      --cv-label-bg: #60a5fa;
      --cv-label: #18181b;
    }
  </style>
</svg>
