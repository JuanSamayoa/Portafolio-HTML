---
/**
 * HERO SECTION - Sección principal del portafolio
 * Diseño moderno con animaciones fluidas y glassmorphism
 */

import Button from "../../shared/ui/Button.astro";
import Card from "../../shared/ui/Card.astro";
import Badge from "../../shared/ui/Badge.astro";
import { personalInfo } from "../../data/personal";

const skills = ["QA", "Java Dev", "Python Dev", "Junior Frontend Developer", "Test Strategy", "CI/CD"];
---

<section
  id="hero"
  class="min-h-screen flex items-center justify-center relative overflow-hidden pt-20 md:pt-24"
>
  <!-- Background gradient animado -->
  <div class="absolute inset-0 bg-background-primary"></div>
  <div
    class="absolute inset-0 bg-gradient-to-br from-brand-500/10 via-transparent to-success-500/10 animate-gradient"
  >
  </div>

  <!-- Grid pattern sutil -->
  <div class="absolute inset-0 opacity-20">
    <div
      class="absolute inset-0"
      style="background-image: linear-gradient(rgba(255,255,255,0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.05) 1px, transparent 1px); background-size: 50px 50px;"
    >
    </div>
  </div>

  <!-- Contenido principal -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <!-- Columna izquierda - Texto -->
      <div class="space-y-8 text-center lg:text-left">
        <!-- Status badge -->
        <div class="flex justify-center lg:justify-start">
          <Badge text="Disponible para proyectos" variant="status" />
        </div>

        <!-- Título principal -->
        <div class="space-y-4">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold">
            <span class="text-foreground-secondary block mb-2 animate-fade-in">
              Hola, soy
            </span>
            <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-brand-400 via-brand-500 to-success-400 animate-gradient-text"
            >
              {personalInfo.name}
            </span>
          </h1>

          <h2
            class="text-xl sm:text-2xl lg:text-3xl text-foreground-secondary font-medium"
          >
            {personalInfo.title}
          </h2>

          <p
            class="text-base sm:text-lg text-foreground-tertiary max-w-2xl mx-auto lg:mx-0 leading-relaxed"
          >
            Portafolio profesional de Juan Samayoa. Ingeniero de Pruebas TI especializado en pruebas manuales, desarrollo en Java, Python y aprendiendo desarrollo frontend.
          </p>
        </div>

        <!-- Skills rápidos -->
        <div class="flex flex-wrap gap-2 justify-center lg:justify-start">
          {skills.map((skill) => (
            <Badge text={skill} variant="skill" />
          ))}
        </div>

        <!-- CTAs -->
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
        >
          <Button variant="primary" size="lg" href="#contact">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            Contáctame
          </Button>

          <Button variant="outline" size="lg" href="#projects">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            Ver Proyectos
          </Button>
        </div>

        <!-- Social links -->
        <div class="flex gap-4 justify-center lg:justify-start">
          <a
            href={personalInfo.github}
            target="_blank"
            rel="noopener noreferrer"
            class="p-3 bg-glass-light hover:bg-glass-heavy rounded-lg transition-all duration-300 hover:-translate-y-1"
            aria-label="GitHub"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"
              ></path>
            </svg>
          </a>

          <a
            href={personalInfo.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="p-3 bg-glass-light hover:bg-glass-heavy rounded-lg transition-all duration-300 hover:-translate-y-1"
            aria-label="LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>

          <a
            href={`mailto:${personalInfo.email}`}
            class="p-3 bg-glass-light hover:bg-glass-heavy rounded-lg transition-all duration-300 hover:-translate-y-1"
            aria-label="Email"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Columna derecha - Profile card -->
      <div class="flex justify-center lg:justify-end">
        <Card variant="glass" padding="lg" hover class="max-w-md w-full">
          <div class="space-y-6">
            <!-- Imagen de perfil con efecto glow -->
            <div class="relative">
              <div
                class="absolute inset-0 bg-gradient-to-br from-brand-500 to-success-500 rounded-2xl blur-2xl opacity-50 animate-pulse"
              >
              </div>
              <img
                src={personalInfo.profileImage}
                alt={personalInfo.name}
                class="relative w-full aspect-square object-cover rounded-2xl border-2 border-white/10"
                loading="eager"
              />
            </div>

            <!-- Info adicional -->
            <div class="space-y-4">
              <div class="flex items-center gap-3 text-foreground-secondary">
                <svg
                  class="w-5 h-5 text-brand-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span>{personalInfo.location}</span>
              </div>

              <div class="flex items-center gap-3 text-foreground-secondary">
                <svg
                  class="w-5 h-5 text-success-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>Disponible para colaboración y laborar</span>
              </div>
            </div>

            <!-- CV Download -->
            <Button
              variant="ghost"
              size="md"
              href={personalInfo.cvPathEs}
              class="w-full"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                ></path>
              </svg>
              Descargar CV
            </Button>
          </div>
        </Card>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <a href="#about" aria-label="Scroll to about section">
      <svg
        class="w-6 h-6 text-foreground-tertiary"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>

<style>
  @keyframes animate-gradient {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-gradient {
    background-size: 200% 200%;
    animation: animate-gradient 15s ease infinite;
  }

  @keyframes animate-fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: animate-fade-in 0.8s ease-out;
  }

  @keyframes gradient-text {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-gradient-text {
    background-size: 200% 200%;
    animation: gradient-text 8s ease infinite;
  }
</style>
