---
/**
 * PROJECTS SECTION - Portafolio de proyectos
 * Grid moderno con hover effects y filtrado
 */

import Section from '../../shared/ui/Section.astro';
import Card from '../../shared/ui/Card.astro';
import Badge from '../../shared/ui/Badge.astro';
import Button from '../../shared/ui/Button.astro';
import { projectsData } from '../../data/projects';
---

<Section id="projects" background="primary">
  <div class="space-y-12">
    <!-- Header -->
    <div class="text-center space-y-4">
      <h2
        class="text-3xl sm:text-4xl lg:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-brand-400 to-success-400"
      >
        Proyectos Destacados
      </h2>
      <p class="text-lg text-foreground-secondary max-w-3xl mx-auto">
        Una selección de trabajos que demuestran mis habilidades en desarrollo y QA
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        projectsData.map((project, index) => (
          <Card variant="glass" padding="sm" hover class="group overflow-hidden">
            <div class="space-y-4">
              <!-- Imagen del proyecto -->
              <div class="relative overflow-hidden rounded-lg aspect-video">
                <div class="absolute inset-0 bg-gradient-to-t from-background-primary/90 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10" />
                <img
                  src={project.image}
                  alt={project.title}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                  loading="lazy"
                />

                {/* Featured badge */}
                {project.featured && (
                  <div class="absolute top-3 right-3 z-20">
                    <Badge text="Destacado" variant="status" />
                  </div>
                )}

                {/* Links overlay */}
                <div class="absolute inset-0 flex items-center justify-center gap-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-20">
                  {project.github && (
                    <a
                      href={project.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="p-3 bg-background-elevated/90 backdrop-blur-sm rounded-lg hover:bg-brand-500 transition-colors"
                      aria-label="Ver código en GitHub"
                    >
                      <svg
                        class="w-5 h-5"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
                      </svg>
                    </a>
                  )}
                  {project.link && (
                    <a
                      href={project.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="p-3 bg-background-elevated/90 backdrop-blur-sm rounded-lg hover:bg-success-500 transition-colors"
                      aria-label="Ver proyecto live"
                    >
                      <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        />
                      </svg>
                    </a>
                  )}
                </div>
              </div>

              <!-- Contenido -->
              <div class="p-4 space-y-3">
                <h3 class="text-xl font-bold text-foreground-primary line-clamp-2">
                  {project.title}
                </h3>

                <p class="text-foreground-tertiary text-sm line-clamp-3 leading-relaxed">
                  {project.description}
                </p>

                {/* Tags */}
                <div class="flex flex-wrap gap-2 pt-2">
                  {project.tags.slice(0, 4).map((tag) => (
                    <Badge text={tag.text} variant="tech" />
                  ))}
                  {project.tags.length > 4 && (
                    <span class="text-xs text-foreground-tertiary self-center">
                      +{project.tags.length - 4}
                    </span>
                  )}
                </div>
              </div>
            </div>
          </Card>
        ))
      }
    </div>

    <!-- Ver más en GitHub -->
    <div class="text-center pt-8">
      <Button
        variant="outline"
        size="lg"
        href="https://github.com/JuanSamayoa"
        class="group"
      >
        <svg
          class="w-5 h-5 group-hover:rotate-12 transition-transform"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"
          ></path>
        </svg>
        Ver más proyectos en GitHub
      </Button>
    </div>
  </div>
</Section>

<style>
  /* Animación suave para las cards */
  .grid > :global(div) {
    animation: fade-in-up 0.6s ease-out backwards;
  }

  .grid > :global(div):nth-child(1) {
    animation-delay: 0.1s;
  }
  .grid > :global(div):nth-child(2) {
    animation-delay: 0.2s;
  }
  .grid > :global(div):nth-child(3) {
    animation-delay: 0.3s;
  }
  .grid > :global(div):nth-child(4) {
    animation-delay: 0.4s;
  }
  .grid > :global(div):nth-child(5) {
    animation-delay: 0.5s;
  }
  .grid > :global(div):nth-child(6) {
    animation-delay: 0.6s;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
