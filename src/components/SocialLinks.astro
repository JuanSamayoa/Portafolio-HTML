---
import LinkedInIcon from './icons/LinkedInIcon.astro';
import GitHubIcon from './icons/GitHubIcon.astro';
import EmailIcon from './icons/EmailIcon.astro';

interface Props {
  linkedInUrl?: string;
  githubUrl?: string;
  email?: string;
  showLabels?: boolean;
  cvUrl?: string; // Nueva prop para el enlace al CV
}

const { 
  linkedInUrl = "https://www.linkedin.com/in/juansamayoa/",
  githubUrl = "https://github.com/yourusername",
  email = "tu-email@ejemplo.com",
  showLabels = false,
  cvUrl = "https://www.canva.com/design/DAGNavqG4Po/IehvEaoao5122cmKtPrSrg/edit?utm_content=DAGNavqG4Po&utm_campaign=designshare&utm_medium=link2&utm_source=sharebutton"
} = Astro.props;

// Implementar manejo de errores para carga de componentes
let iconsLoaded = {
  linkedin: true,
  github: true,
  email: true
};

try {
  // Si necesitas operaciones asíncronas aquí
  // const result = await someAsyncOperation();
} catch (error) {
  console.error("Error loading social icons:", error);
  iconsLoaded = {
    linkedin: false,
    github: false,
    email: false
  };
}
---

<ul class="flex gap-4 mt-6 flex-wrap justify-center">
  {linkedInUrl && iconsLoaded.linkedin && (
    <li>
      <a href={linkedInUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link linkedin-link"
        aria-label="Perfil de Linkedin">
        <LinkedInIcon class="social-icon" />
        {showLabels && <span>LinkedIn</span>}
      </a>
    </li>
  )}
  
  {githubUrl && iconsLoaded.github && (
    <li>
      <a href={githubUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link github-link"
        aria-label="Perfil de GitHub">
        <GitHubIcon class="social-icon" />
        {showLabels && <span>GitHub</span>}
      </a>
    </li>
  )}

  {email && iconsLoaded.email && (
    <li>
      <a href={`mailto:${email}`}
        rel="noopener noreferrer"
        class="social-link email-link"
        aria-label="Enviar un correo electrónico">
        <EmailIcon class="social-icon" />
        {showLabels && <span>Email</span>}
      </a>
    </li>
  )}

  {cvUrl && (
    <li>
      <a href={cvUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link cv-link"
        aria-label="Ver CV">
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          width="24" 
          height="24" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round"
        >
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <path d="M14 2v6h6"></path>
          <path d="M16 13H8"></path>
          <path d="M16 17H8"></path>
          <path d="M10 9H8"></path>
        </svg>
        {showLabels && <span>CV</span>}
      </a>
    </li>
  )}
</ul>

<style>
  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    border: 2px solid rgba(156, 163, 175, 0.3);
    background-color: rgba(255, 255, 255, 0.1);
    color: #4b5563;
    transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);
    position: relative;
    overflow: hidden;
  }

  .social-icon {
    width: 1.5rem;
    height: 1.5rem;
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  /* Efecto hover para los links */
  .social-link:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    border-color: rgba(156, 163, 175, 0.8);
  }
  
  .social-link:hover .social-icon {
    transform: scale(1.2) rotate(5deg);
  }
  
  /* Efecto de resplandor en el borde */
  .social-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.4),
      transparent
    );
    transition: 0.6s;
  }
  
  .social-link:hover::before {
    left: 100%;
  }

  /* Estilos específicos para cada red social */
  .linkedin-link:hover {
    background-color: rgba(0, 119, 181, 0.1);
    border-color: #0077b5;
    color: #0077b5;
  }
  
  .github-link:hover {
    background-color: rgba(36, 41, 47, 0.1);
    border-color: #24292f;
    color: #24292f;
  }
  
  .email-link:hover {
    background-color: rgba(234, 88, 12, 0.1);
    border-color: #ea580c;
    color: #ea580c;
  }

  .cv-link:hover {
    background-color: rgba(0, 0, 0, 0.1);
    border-color: #000000;
    color: #000000;
  }

  /* Modo oscuro */
  :global(.dark) .social-link {
    border-color: rgba(156, 163, 175, 0.4);
    background-color: rgba(255, 255, 255, 0.05);
    color: #e5e7eb;
  }

  :global(.dark) .linkedin-link:hover {
    background-color: rgba(0, 119, 181, 0.2);
    border-color: #0077b5;
    color: #52a6da;
  }
  
  :global(.dark) .github-link:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: #8b949e;
    color: #c9d1d9;
  }
  
  :global(.dark) .email-link:hover {
    background-color: rgba(234, 88, 12, 0.2);
    border-color: #ea580c;
    color: #fb923c;
  }

  :global(.dark) .cv-link:hover {
    background-color: rgba(0, 0, 0, 0.2);
    border-color: #000000;
    color: #ffffff;
  }
</style>
